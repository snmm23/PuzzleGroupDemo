<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/SelectFragment">

    <fragment
        android:id="@+id/SelectFragment"
        android:name="com.sbl.puzzle.ui.SelectFragment"
        android:label="@string/select_fragment_label"
        tools:layout="@layout/fragment_select">

        <action
            android:id="@+id/action_Select_to_Detail"
            app:destination="@id/DetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/DetailFragment"
        android:name="com.sbl.puzzle.ui.DetailFragment"
        android:label="@string/detail_fragment_label"
        tools:layout="@layout/fragment_detail">

        <action
            android:id="@+id/action_Detail_to_Select"
            app:destination="@id/SelectFragment" />
    </fragment>
</navigation>